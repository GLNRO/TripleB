<section class='block' id='alert-incomplete-page'>
  <div class="location_map"></div>
    <div class="centered">
      <div id="lat" style="display: none;"><%= @alert.latitude %></div>
      <div id="lng" style="display: none;"><%= @alert.longitude %></div>
      <div id='current_lat' style="display: none;"><%= current_user.latitude %></div>
      <div id='current_lng' style="display: none;"><%= current_user.longitude %></div>
      <h1>Alert status: <%= @alert.status %></h1>
      <h3><%= @alert.creator.first_name %> needs help</h3>
      <div>Description: <%= @alert.description %></div>
      <div>Created <%= @alert.time_diff %> ago</div>

        <% if current_user == @alert.creator %>
          <%= link_to 'Delete Alert', @alert, method: :delete %>
        <% else %>
          <%= form_for @alert do |f| %>
            <%= f.hidden_field :status, value: "in progress" %>
            <%= f.hidden_field :mechanic_id, value: current_user.id %>
            <input type='hidden' name="google[distance]" id="distance" value=""/>
            <input type='hidden' name="google[duration]" id="duration" value=""/>
            <%= f.submit "Help #{@alert.creator.first_name}" %>
          <% end %>

        <% end %>
    </div>
</section>
<%= render partial: "shared/footer" %>