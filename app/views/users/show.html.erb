<div>
	<% if authorized?(@user)%>
		<%= link_to 'Edit', edit_user_path(@user) %>
	<% end %>

	<%= image_tag(@user.avatar_url) %>
	<h1>Welcome <%= @user.full_name %></h1>
	<div>Member Since: <%= @user.time_diff %></div>

	<% if @user.bio.empty? %>
		<%= link_to 'Click Here To Edit', edit_user_path(@user) %>
	<% else %>
		<div>Bio: <%= @user.bio %></div>
	<% end %>

	<div class='row' style="width: 100%;">
		<div class='large-6 column text-center'>
			<h2>Your Created Alerts</h2>
			<ul>
				<% @created_alerts.each do |alert| %>
					<li><%= link_to alert.time_diff, alert_path(alert) %></li>
				<% end %>
			</ul>
		</div>

		<div class='large-6 column text-center'>
			<h2>Your Accepted Alerts</h2>
			<ul>
				<% @alerts.each do |alert| %>
					<li><%= link_to alert.time_diff, alert_path(alert) %></li>
				<% end %>
			</ul>
		</div>
	</div>

</div>
