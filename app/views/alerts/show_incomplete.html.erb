<h1>Alert status: <%= @alert.status %></h1>
<h3><%= @alert.creator.first_name %> needs help</h3>
<div>Description: <%= @alert.description %></div>
<div>Created <%= @alert.time_diff %> ago</div>

<div id="lat" style="display: none;"><%= @alert.location.latitude %></div>
<div id="lng" style="display: none;"><%= @alert.location.longitude %></div>
<div id='current_lat' style="display: none;"><%= current_user.location.latitude %></div>
<div id='current_lng' style="display: none;"><%= current_user.location.longitude %></div>

<div id="user_id" style="display: none;"><%= current_user.id %></div>
<% if current_user == @alert.creator %>
  <%= link_to 'Delete Alert', @alert, method: :delete %>
<% else %>
  <%= form_for @alert do |f| %>
    <%= f.hidden_field :status, value: "in progress" %>
    <input type='hidden' name="receipt[mechanic_id]" value="<%= current_user.id %>"/>
    <input type='hidden' name="receipt[distance]" id="distance" value=""/>
    <input type='hidden' name="receipt[duration]" id="duration" value=""/>
    <input type='hidden' name="mechanic[latitude]" id="current_lat" value="<%= current_user.location.latitude %>" />
    <input type='hidden' name="mechanic[longitude]" id="current_lng" value="<%= current_user.location.longitude %>" />
    <%= f.submit "Help #{@alert.creator.first_name}" %>
  <% end %>
</div>
<% end %>
<div class="location_map"></div>