<div class="location_map"></div>
<div id="lat" style="display: none;"><%= @alert.location.latitude %></div>
<div id="lng" style="display: none;"><%= @alert.location.longitude %></div>

<h1>Alert status: <%= @alert.status %> </h1>
<% if @alert.creator == current_user%>
  <h3><%= @alert.receipt.mechanic.first_name%> was your mechanic</h3>
<% elsif @alert.receipt.mechanic == current_user %>
  <h3>Thanks for helping <%= @alert.creator.first_name %></h3>
<% else %>
  <h3>Created by <%= @alert.creator.first_name%> </h3>
<%end%>
<h4>This alert was posted <%=@alert.time_diff%> from <%=@alert.location.latitude%>, <%=@alert.location.longitude%></h4>
<p><%=@alert.description%></p>
